<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Posts</h1>
    <%= link_to "New Post", new_post_path, class: "btn btn-success" %>
  </div>

  <form class="d-flex mb-4" action="<%= posts_path %>" method="get">
    <input
      name="q"
      value="<%= params[:q] %>"
      class="form-control me-2"
      type="search"
      placeholder="Search"
    >
    <button class="btn btn-primary" type="submit">Search</button>
  </form>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 col-lg-4 mb-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text text-truncate"><%= truncate(post.body, length: 100) if post.respond_to?(:body) %></p>
            <%= link_to "Open", post_path(post), class: "btn btn-outline-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
