<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- Profile -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0"><%= @user.name %>'s profile</h2>
        </div>
        <div class="card-body">
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Age:</strong> <%= @user.age || "Not specified" %></p>
          <p><strong>Joined:</strong> <%= @user.created_at.strftime("%d.%m.%Y") %></p>
        </div>
      </div>

      <!-- User posts -->
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0">Posts by <%= @user.name %></h3>
        </div>
        <div class="card-body">
          <% if @posts.any? %>
            <div class="list-group">
              <% @posts.each do |post| %>
                <%= link_to post_path(post), class: "list-group-item list-group-item-action" do %>
                  <strong><%= post.title %></strong>
                  <br>
                  <small class="text-muted">
                    <%= post.created_at.strftime("%d.%m.%Y %H:%M") %>
                  </small>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No posts yet.</p>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>