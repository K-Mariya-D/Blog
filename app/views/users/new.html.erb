<div class="container my-5">
  <h2 class="mb-4 text-center">Register</h2>

  <%= form_with model: @user, local: true, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="mb-3">
      <%= f.label :age, class: "form-label" %>
      <%= f.number_field :age, class: "form-control", placeholder: "Enter your age" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
    </div>

    <%= f.submit "Register", class: "btn btn-primary w-100" %>
  <% end %>
</div>
